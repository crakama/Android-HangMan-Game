<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.crakama.hangmandroidclient.ConnectionFragment">

    <ImageView
        android:id="@+id/connection_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/hangman6" />

    <EditText
        android:id="@+id/connection_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/connection_image"
        android:layout_centerInParent="true"
        android:hint="Enter IP address"
        android:text="192.168.137.50" />

    <Button
        android:id="@+id/connection_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/connection_ip"
        android:layout_centerInParent="true"
                android:text="Connect" />

    <TextView
        android:id="@+id/connection_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/connection_button"
        android:layout_centerInParent="true"
        android:text="\nConnect to a server to play the game" />

</RelativeLayout>
